<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:padding="3dp"
    >
    <Button
        android:id="@+id/artist_setting_paint_button_undo"
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:text="undo"
        android:textSize="12dp"
        android:layout_marginBottom="5dp"
        />
    <Button
        android:id="@+id/artist_setting_paint_button_redo"
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:text="redo"
        android:textSize="12dp"
        android:layout_marginBottom="5dp"
        />
    <Button
        android:id="@+id/artist_setting_paint_button_clear"
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:text="clear"
        android:textSize="12dp"
        android:layout_marginBottom="20dp"
        />

    <SeekBar
        android:id="@+id/artist_setting_paint_stroke_width_seekbar"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        />
    <TextView
        android:id="@+id/artist_setting_paint_stroke_width_label"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textSize="8dp"
        android:text="stroke width"
        android:textColor="#000000"
        android:layout_gravity="center_horizontal"
        />
</LinearLayout>